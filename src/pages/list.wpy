<style lang="less" scoped>
@import '../assets/css/base.less';
  .list-view {
    margin: 20rpx 40rpx;
  }
  .list-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  .list-left {
    width: 30%;
    height: 200rpx;
    background-size: cover;
    position: relative;
    border-radius: 4px;
    &::after {
      position: absolute;
      background: rgba(0, 0, 0, 0.6);
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      height: 100%;
      content: '';
      z-index: 1;
      border-radius: 4px;
    }
    text {
      display: inline-block;
      position: absolute;
      z-index: 2;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      color: #fff;
      font-weight: bold;
      .fz_16;
    }
  }
  .list-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    .fz_12;
    padding-left: 40rpx;
    border-radius: 0 4px 4px 0;
    border-width: 1px 1px 1px 0;
    border-style: solid;
    border-color: @borderBotm;
    height: 150rpx;
