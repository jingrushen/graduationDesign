      color: @color333;
      line-height: 18px;
    }
    .scope {
      margin-left: 20rpx;
      color: @colorYellow;
    }
  }
</style>
<template>
  <view class='list-view'>
    <view class="list-wrapper" wx:for="{{listMovies}}" wx:for-item='itemTag' wx:for-index="tagIndex" wx:key='tagIndex' bindtap="clickList" data-index="{{tagIndex}}" wx:if="{{show}}">
      <view class="list-left" style="background-image: url('{{itemTag[0].images.large}}')"><text>{{listName[tagIndex].name}}</text></view>
      <view class="list-right">
        <text wx:for="{{listMovies[tagIndex]}}" wx:for-item='item' wx:for-index='index' wx:key="index">{{index + 1}}: {{item.title}}<text class="scope">{{item.rating.average}}分</text></text>
      </view>
    </view>
  </view>
</template>
<script>
import wepy from 'wepy'
import Serv from '@/config/Api'

export default class List extends wepy.page {
  config = {
    navigationBarTitleText: '榜单'
  }

  data = {
    listName: [
      {
        name: '喜剧片',
        tag: '喜剧'
      }, {
        name: '动作片',
        tag: '动作'
      }, {
        name: '科幻片',
        tag: '科幻'
      }, {
        name: '爱情片',
        tag: '爱情'
      },
    ],
    listMovies: [],
    show: false
  }
  methods = {
    clickList(e) {
      let tag = this.listName[e.currentTarget.dataset.index].tag;
      this.$navigate({
        url: `/pages/alllist?tag=${tag}`,
      })
    }
  }

  async searchMovie(params) {
    let resp = await Serv.searchMovie(params);
    this.listMovies.push(resp.subjects.slice(0, 3));
    this.$apply();
  }

  async onLoad() {
    wepy.showLoading({
      title: '加载中',
      mask: true
    })
    for(let item in this.listName) {
      await this.searchMovie({tag: this.listName[item].tag})
    }
    this.show = true;
    wepy.hideLoading();
    this.$apply();

  }

}
</script>