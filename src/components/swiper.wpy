<style lang="less" scoped>
  .swiper {
    width: 95%;
    height: 600rpx;
    margin-bottom: 20rpx;
  }
  .slide-image {
    width: 100%;
    height: 100%;
  }
</style>
<template>
  <swiper
    indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    duration="{{duration}}"
    circular="{{circular}}"
    class="swiper"
  >
    <block wx:for="{{swiperMovies}}" wx:key="{{index}}">
      <swiper-item class="slide-swiper">
        <image src="{{item.images.large}}" class="slide-image" width="355" height="150" bindtap="handleClickImage" data-id="{{item.id}}" mode="aspectFill"/>
      </swiper-item>
    </block>
  </swiper>
</template>
<script>
import wepy from 'wepy'

export default class Swiper extends wepy.component {
  props = {
    swiperMovies: {
      type: Array,
      default: []
    },

    indicatorDots: {
      type: Boolean,
      default: true
    },

    autoplay: {
      type: Boolean,
      default: true
    },

    interval: {
      type: Number,
      default: 3000
    },

    duration: {
      type: Number,
      default: 500
    },

    circular: {
      type: Boolean,
      default: true
    },
  }
  methods = {
    handleClickImage(e) {
      let id = e.currentTarget.dataset.id;
      wepy.navigateTo({
        url: `/pages/detail?id=${id}`
      })
    }
  }
}
</script>
